.navbar-header
  %button.navbar-toggle.animated{ type: "button", data: { toggle: "collapse", target: "#main-navigation" } }
    %span.sr-only
      = t('nav.toggle_navigation')
    %span.icon-bar
    %span.icon-bar
    %span.icon-bar

%nav#main-navigation.collapse.navbar-collapse{ role: "navigation" }
  %ul.nav.navbar-nav
    %li{ class: "#{'active' if current_page?(root_path)}" }
      = link_to "Bootstrap 3 Theme", root_path
      
    %li{ class: "#{'active' if current_page?(form_tests_path)}" }
      = link_to "Form", form_tests_path

    %li{ class: "#{'active' if current_page?(ressources_path)}" }
      = link_to "Ressources", ressources_path

    %li{ class: "#{'active' if current_page?(newsletters_path)}" }
      = link_to "Newsletter", newsletters_path  
