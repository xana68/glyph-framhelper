#form-signin.vCenter.hCenter
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-signin glyph-form" }) do |f|
    %h2.form-signin-heading
      = t('devise.sign_in')
    %hr  
    = f.input :email, :required => false, :autofocus => true, placeholder: t('devise.email'), label: false, wrapper: :input_group_append, icon: "fa fa-user"
    = f.input :password, :required => false, placeholder: t('devise.password'), label: false, wrapper: :input_group_append, icon: "fa fa-key"
    = f.input :remember_me, :inline_label => t('devise.remember'), :label => false, wrapper: :vertical_radio_and_checkboxes, :as => :boolean if devise_mapping.rememberable?

    = f.button :submit, t('devise.sign_in_btn'), class: 'btn btn-lg btn-primary btn-block'
    
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      %hr
      %h3.form-signin-heading
        = t('devise.forget_password')
      %p.form-signin-info
        = t('devise.no_worries')  
        = link_to t('devise.click_here'), new_password_path(resource_name)
        = t('devise.reset_password')
