= para_form_for(resource) do |form|
  = form.error_notification

  = form.fieldset do
    = form.input :title
    = form.input :caption
    = form.input :url
    = form.input :category, :as => :selectize, :collection => Category.order(name: :asc)
    = form.input :tag_list, :as => :selectize, :collection => ActsAsTaggableOn::Tag.order(name: :asc), creatable: true

  = form.actions
